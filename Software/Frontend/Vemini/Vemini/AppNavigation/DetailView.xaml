<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Vemini.AppNavigation.DetailView">
    <ContentPage.Content>
        <StackLayout Padding="0,10,0,0" BackgroundColor="CornflowerBlue">
            <Label x:Name="title_label"
                   TextColor="White"
                   FontSize="26"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
            />
            <Label x:Name="description_label" TextColor=" White" Margin="10,20,0,10"></Label>
            <Label x:Name="street_label" TextColor=" White" Margin="10,50,0,0"></Label>
            <Label x:Name="plz_label" TextColor=" White" Margin="10,0,0,10"></Label>
            
            <Button x:Name="accept_button" BackgroundColor="White" TextColor="CornflowerBlue" Text="Annehmen und Chatten"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>