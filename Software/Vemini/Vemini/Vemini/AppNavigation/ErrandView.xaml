<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Vemini.AppNavigation.ErrandView"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps">

    <ContentPage.ToolbarItems >
        <ToolbarItem Text="+"
                     Order="Primary"
                     Clicked="MenuItem_OnClickedPlus"
        ></ToolbarItem>
        <ToolbarItem Text="Konto"
                     Order="Primary">
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout BackgroundColor="White">

          
            <maps:Map VerticalOptions="FillAndExpand" IsShowingUser="True" IsEnabled="True" MapType="Street" HeightRequest="300">
            </maps:Map>
            
            
            <ScrollView Orientation="Vertical" VerticalOptions="FillAndExpand">
                <StackLayout BackgroundColor="CornflowerBlue"
                             Padding="10,10,10,10">
                    <ListView x:Name="errand_listview" BackgroundColor="White" ItemTapped="OnItemSelected" SeparatorColor="CornflowerBlue" >
                        <ListView.ItemTemplate>
                            <DataTemplate >
                                <TextCell 
                                          Text="{Binding Category}"
                                          Detail="{Binding Title}"
                                          TextColor="Black"
                                          DetailColor="LightGray"
                                          ></TextCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
